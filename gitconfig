[core]
    excludesfile = /Users/phil/.gitignore-global
    editor = vim
[user]
    name = Phil Adams
    email = philadams.net@gmail.com
    username = philadams
[github]
    user = philadams
[color]
    ui = auto
[alias]
    co = checkout
    st = status --ignore-submodules=dirty
    s = status -sb --ignore-submodules=dirty
    dif = diff --ignore-submodules
    b = branch
    l = log --pretty=format:'%C(yellow)%h%Creset %Cgreen%an%Creset: %s %Cgreen%ar%Creset'
    lg = log --all --graph --decorate --oneline --abbrev-commit
    lnc = log --pretty=format:'%h: %an (%ar)%n %s%n'
    lnca = log --pretty=format:'%h: %an (%ci)%n %s%n'
    ll = log --stat --summary
[push]
    default = simple
[credential]
    helper = osxkeychain
[init]
    templatedir = /Users/phil/.git-templates
